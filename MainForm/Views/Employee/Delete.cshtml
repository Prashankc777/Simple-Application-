@model Employee

<h1>Employee Details</h1>

<div class="container">

    <form asp-controller="Employee" asp-action="Delete" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
            </div>
        </div>

        <button type="submit" asp-controller="Employee" asp-action="Edit" class="btn btn-danger">Delete</button>
        <button type="submit" asp-controller="Employee" asp-action="Index" class="btn btn-success">Cancel</button>

        


    </form>
</div>